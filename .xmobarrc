Config { font = "xft:Bitstream Vera Sans Mono:size=12:medium:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Memory: <usedratio>%"] 10
                    , Run DiskU [("/", "Disk: <usedp>%")]
                                ["-L", "20", "-H", "80", "-m", "1", "-p", "2",
                                "--normal", "grey50", "--high", "#a0522d",
                                "--low", "#2f4f4f"] 10
                    , Run Network "enp0s3" ["-t","Network: <rx>|<tx>","-S", "True"] 10
                    , Run Date "%a %b %_d, %l:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<fc=#ee9a00>%StdinReader%</fc> }{ <fc=#ee9a00>%cpu%,  %memory%, %disku%,  %enp0s3%,  %date%</fc>  "
       }
